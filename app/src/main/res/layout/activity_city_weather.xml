<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.CityWeather"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <!-- finish screen on clicked -->
    <ImageView
        android:id="@+id/goBack"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/finishscreen" />

    <TextView
        android:id="@+id/cityCountry_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City, Country"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        tools:ignore="HardcodedText">
    </TextView>

    <!-- Bellow card contents will be overwritten with API data -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atmospheric Pressure"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/pollution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pollution"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center">
        </TextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>