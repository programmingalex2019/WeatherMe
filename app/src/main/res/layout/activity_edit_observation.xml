<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.EditObservation"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goBack"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <!-- Bellow text fields will send data to cloud -->
    <EditText
        android:id="@+id/observation_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Add title"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/observation_content"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:background="@color/white"
        android:hint="Start writing..."
        android:gravity="top"
        android:padding="10dp"/>

    <Button
        android:id="@+id/saveObservation"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/button_style"
        android:text="Save"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/shareObservation"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/button_share_style"
        android:text="Share"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        />

</LinearLayout>